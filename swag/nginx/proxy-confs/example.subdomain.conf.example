server {

    listen 443 ssl;
    listen [::]:443 ssl;

    # âœ… Set the subdomain
    server_name EXAMPLE_CHANGEME.*;

    include /config/nginx/ssl.conf;
    client_max_body_size 0;


    location / {

        # ğŸ“ ğŸ‘‰ Configigure app port, this depends on your app
        set $upstream_port 80;

        # Import shared proxy confs
        include /config/nginx/shared.conf;

        # ğŸ“ ğŸ‘‰ set the upstream app host or ip, this can be a container name (if it is in the same network), or an hostname, or an ip address
        set $upstream_app HOSTNAME_CHANGEME;
        set $upstream_proto http;
        proxy_pass $upstream_proto://$upstream_app:$upstream_port;

    }

}